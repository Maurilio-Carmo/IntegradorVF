{
  "name": "integrador-varejo-facil",
  "version": "1.0.0",
  "description": "Sistema de integração com API Varejo Fácil",
  "main": "backend/server.js",
  "bin": "backend/server.js",
  "scripts": {
    "prestart": "node scripts/check-dependencies.js",
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "frontend": "http-server frontend -p 8000 -c-1",
    "init-db": "node backend/check-database.js",
    "check-db": "node backend/check-database.js",
    "reset-db": "node scripts/reset-db.js",
    "build:exe": "pkg . --targets node18-win-x64 --output dist/IntegradorVF.exe"
  },
  "pkg": {
    "scripts": [
      "backend/**/*.js",
      "scripts/**/*.js"
    ],
    "assets": [
      "frontend/**/*",
      "backend/database/*.sql",
      "config/.env.example"
    ],
    "targets": [
      "node22-win-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "varejo",
    "integração",
    "api"
  ],
  "author": "Maurilio Carmo",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nestjs": "^0.0.1",
    "node-firebird": "^1.1.10"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^5.11.5",
    "nodemon": "^3.0.1"
  }
}
