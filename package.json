{
  "name": "integrador-varejo-facil",
  "version": "3.0.0",
  "description": "Sistema de integração com API Varejo Fácil",
  "main": "backend/src/main.ts",
  "author": "Maurilio Carmo",
  "license": "MIT",
  "keywords": [
    "varejo",
    "integração",
    "api",
    "nestjs",
    "sqlite",
    "firebird"
  ],
  "scripts": {
    "start": "npm run nest:start",
    "dev": "npm run nest:watch",
    "start:legacy": "node backend/server.js",
    "dev:legacy": "nodemon backend/server.js",
    "nest:dev": "ts-node -r tsconfig-paths/register backend/src/main.ts",
    "nest:build": "tsc -p tsconfig.json",
    "nest:start": "node dist/backend/src/main.js",
    "nest:watch": "nodemon --exec ts-node backend/src/main.ts --ext ts",
    "init-db": "node backend/check-database.js",
    "check-db": "node backend/check-database.js",
    "reset-db": "node scripts/reset-db.js",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --watch --config jest.config.json",
    "test:cov": "jest --coverage --config jest.config.json",
    "build:exe": "pkg . --targets node22-win-x64 --output dist/IntegradorVF.exe"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/swagger": "^11.2.6",
    "better-sqlite3": "^12.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-firebird": "^1.1.10",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@yao-pkg/pkg": "^5.11.5",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
